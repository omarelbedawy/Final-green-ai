// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Device {
  id             String      @id @default(auto()) @map("_id") @db.ObjectId
  autoIrrigation Boolean     @default(true)
  nightLight     Boolean     @default(false)
  readings       Reading[]
  diagnoses      Diagnosis[]
}

model Reading {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId     String   @db.ObjectId
  device       Device   @relation(fields: [deviceId], references: [id])
  temperature  Float
  humidity     Float
  soilMoisture Int
  lightLevel   Int
  gas          Int
  pumpState    String
  fanState     String
  growLedState String
  createdAt    DateTime @default(now())

  @@index([deviceId])
}

model Diagnosis {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  deviceId  String   @db.ObjectId
  device    Device   @relation(fields: [deviceId], references: [id])
  isHealthy Boolean
  disease   String
  remedy    String
  imageUrl  String?
  createdAt DateTime @default(now())

  @@index([deviceId])
}
